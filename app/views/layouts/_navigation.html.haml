-# navigation styled for Zurb Foundation 5
-# the syntax for data-topbar may need to change for Zurb Foundation 5
.contain-to-grid
  %nav.top-bar{"data-topbar" => true, "role" => "navigation"}
    %ul.title-area
      %li.name
        - if request.path == '/'
          %h1= link_to 'Protoshare', root_path, class: "active"
        - else
          %h1= link_to 'Protoshare', root_path, class: "inactive"
      %li.toggle-topbar
        %a{:href => "#"}
          Menu
          %i.icon-list
    .top-bar-section
      %ul.left
        = render 'layouts/navigation_links'
      %ul.right
        = render 'layouts/account_links'
.row
  .large-12.columns
    .border-top